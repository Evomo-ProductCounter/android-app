<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProductCounterApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_200</item>
        <item name="colorSecondaryVariant">@color/orange_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PageTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="InfoTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="GaugePercentage" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TableHeader" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TableColumn" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="UserInfoTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="UserInfo" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/grey</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Logout" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/red</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="LogoutDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/orange_500</item>
        <item name="dialogCornerRadius">16dp</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="DropdownItem" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Timer" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">150sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MachineInfo" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ChartLegend" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="HistoryMachine" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="HistoryInfo" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="HistoryDate" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="Theme.ProductCounterApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.ProductCounterApp.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.ProductCounterApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>