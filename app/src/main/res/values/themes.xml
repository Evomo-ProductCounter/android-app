<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProductCounterApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_200</item>
        <item name="colorSecondaryVariant">@color/orange_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PageTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="InfoTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="UserInfoTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="UserInfo" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/grey</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Logout" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/red</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="LogoutDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/orange_500</item>
        <item name="dialogCornerRadius">16dp</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="DropdownItem" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>